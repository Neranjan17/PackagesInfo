<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Main background layer -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_onPrimary_color"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    
    <!-- Small yellow rectangle -->
    <item 
	    android:gravity="bottom|right"
		android:right="4dp" android:bottom="6dp"
		android:width="85dp" android:height="25dp">
		
        <shape android:shape="rectangle">
            <solid android:color="@color/app_secondary_color"/>
            <corners android:topLeftRadius="45dp"
                     android:topRightRadius="0dp"
                     android:bottomRightRadius="16dp"
                     android:bottomLeftRadius="0dp"/>
        </shape>
    </item>
    
</layer-list>