<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp" >

    <TextView
        android:id="@+id/heading_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="New Package"
        android:textColor="@color/app_text_tertiary_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >

                <AutoCompleteTextView
                    android:id="@+id/ispName_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_background"
                    android:completionThreshold="1"
                    android:hint="Like Dialog Mobitel ro else"
                    android:inputType="text"
                    android:maxLength="15"
                    android:padding="16dp"
                    android:textColor="@color/app_input_text_color"
                    android:textColorHint="@color/app_text_hint_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:background="@color/app_onPrimary_color"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="ISP&apos;s Name"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >

                <AutoCompleteTextView
                    android:id="@+id/packageName_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_background"
                    android:completionThreshold="1"
                    android:hint="Like FunBalster ro else"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:textColor="@color/app_input_text_color"
                    android:textColorHint="@color/app_text_hint_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:background="@color/app_onPrimary_color"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="Pakage Name"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >

                <AutoCompleteTextView
                    android:id="@+id/packagePrice_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_background"
                    android:completionThreshold="1"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/currency"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="5"
                    android:padding="16dp"
                    android:textColor="@color/app_input_text_color"
                    android:textColorHint="@color/app_text_hint_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:background="@color/app_onPrimary_color"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="Package Price"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >

                <AutoCompleteTextView
                    android:id="@+id/validDays_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_background"
                    android:completionThreshold="1"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/days"
                    android:hint="0"
                    android:inputType="text"
                    android:maxLength="9"
                    android:padding="16dp"
                    android:textColor="@color/app_input_text_color"
                    android:textColorHint="@color/app_text_hint_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:background="@color/app_onPrimary_color"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="Valid Days"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_background"
                    android:padding="16dp" >

                    <AutoCompleteTextView
                        android:id="@+id/anyNetCalls_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/any_net_text"
                        android:gravity="end"
                        android:hint="0Mins"
                        android:inputType="text"
                        android:maxLength="9"
                        android:textColor="@color/app_input_text_color"
                        android:textColorHint="@color/app_text_hint_color"
                        android:textSize="16sp" />

                    <AutoCompleteTextView
                        android:id="@+id/thisNetCalls_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/this_net_text"
                        android:gravity="end"
                        android:hint="0Mins"
                        android:inputType="text"
                        android:maxLength="9"
                        android:textColor="@color/app_input_text_color"
                        android:textColorHint="@color/app_text_hint_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:background="@color/app_onPrimary_color"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="Calls"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_background"
                    android:padding="16dp" >

                    <AutoCompleteTextView
                        android:id="@+id/anyNetSms_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/any_net_text"
                        android:gravity="end"
                        android:hint="0 SMS"
                        android:inputType="text"
                        android:maxLength="9"
                        android:textColor="@color/app_input_text_color"
                        android:textColorHint="@color/app_text_hint_color"
                        android:textSize="16sp" />

                    <AutoCompleteTextView
                        android:id="@+id/thisNetSms_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/this_net_text"
                        android:gravity="end"
                        android:hint="0 SMS"
                        android:inputType="text"
                        android:maxLength="9"
                        android:textColor="@color/app_input_text_color"
                        android:textColorHint="@color/app_text_hint_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:background="@color/app_onPrimary_color"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="SMS"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_background"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <AutoCompleteTextView
                        android:id="@+id/availableAppDataLimit_act"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:gravity="end"
                        android:hint="Unlimited"
                        android:inputType="text"
                        android:maxLength="15"
                        android:paddingEnd="4dp"
                        android:paddingStart="16dp"
                        android:textSize="16sp" />

                    <MultiAutoCompleteTextView
                        android:id="@+id/availableApp_mact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:gravity="start"
                        android:hint="Like YouTube, Facebook"
                        android:inputType="textMultiLine"
                        android:paddingTop="16dp"
                        android:textColor="@color/app_input_text_color"
                        android:textColorHint="@color/app_text_hint_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:background="@color/app_onPrimary_color"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="Available app&apos;s"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_background"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <AutoCompleteTextView
                        android:id="@+id/paymentType_act"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@android:color/transparent"
                        android:completionThreshold="1"
                        android:gravity="end"
                        android:hint="Monthly pay"
                        android:inputType="text"
                        android:maxLength="15"
                        android:paddingEnd="4dp"
                        android:paddingStart="16dp"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <AutoCompleteTextView
                            android:id="@+id/anyTimeData_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:completionThreshold="1"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/any_time"
                            android:hint="0GB"
                            android:inputType="text"
                            android:maxLength="9"
                            android:textColor="@color/app_input_text_color"
                            android:textColorHint="@color/app_text_hint_color"
                            android:textSize="16sp" />

                        <AutoCompleteTextView
                            android:id="@+id/dayTimeData_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:completionThreshold="1"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/day_time"
                            android:hint="0GB"
                            android:inputType="text"
                            android:maxLength="9"
                            android:textColor="@color/app_input_text_color"
                            android:textColorHint="@color/app_text_hint_color"
                            android:textSize="16sp" />

                        <AutoCompleteTextView
                            android:id="@+id/nightTimeData_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:completionThreshold="1"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/night_time"
                            android:hint="0GB"
                            android:inputType="text"
                            android:maxLength="9"
                            android:textColor="@color/app_input_text_color"
                            android:textColorHint="@color/app_text_hint_color"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:background="@color/app_onPrimary_color"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="Internet data"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" >

                <MultiAutoCompleteTextView
                    android:id="@+id/description_mact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_background"
                    android:completionThreshold="1"
                    android:gravity="start"
                    android:hint="No Description"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:padding="16dp"
                    android:textColor="@color/app_input_text_color"
                    android:textColorHint="@color/app_text_hint_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginStart="12dp"
                    android:background="@color/app_onPrimary_color"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="Description"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="12sp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/clearAll_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        android:gravity="top|end"
        android:padding="0dp"
        android:text="Clear All"
        android:textColor="@color/app_text_secondary_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addPackage_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/app_secondary_color"
        android:text="Add Package"
        android:textColor="@color/app_text_primary_color"
        android:textSize="16sp" />

</LinearLayout>