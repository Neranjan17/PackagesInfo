<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/package_recycle_rect"
	android:elevation="3dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ispName_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Dialog"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/showMenu_ibtn"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/menu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/packageName_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fun Blaster"
                android:textColor="@color/app_text_primary_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/validDayCount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@color/app_text_quaternary_color"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/app_line_primary_color" />

        <TextView
            android:id="@+id/specialAppsLimitStatus_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unlimited"
            android:textColor="@color/app_text_tertiary_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/specialApps_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook, WhatsApp, YouTube, Instagram"
            android:textColor="@color/app_text_secondary_color"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Note : 3Mbps speed for the first 25GB and after 1Mbps speed"
            android:textColor="@color/app_text_quaternary_color"
            android:textSize="14sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" >

            <TextView
                android:id="@+id/anytimeData_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/any_time"
                android:text="4GB"
                android:textColor="@color/app_text_secondary_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/daytimeData_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/day_time"
                android:text="0"
                android:textColor="@color/app_text_secondary_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/nighttimeData_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/night_time"
                android:text="0"
                android:textColor="@color/app_text_secondary_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/dataCycle_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Monthly Pay"
                android:textColor="@color/app_text_quaternary_color"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <View
			android:id="@+id/bottomLine_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_line_primary_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:gravity="bottom"
        android:paddingStart="16dp"
        android:paddingTop="8dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="16dp" >

            <LinearLayout
				android:id="@+id/calls_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/calls"
                    android:text="Calls"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
						android:id="@+id/anyNetCallsLabel_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="Any net"
                        android:textColor="@color/app_text_secondary_color"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/anyNetCallsCount_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="100Mins"
                        android:textColor="@color/app_text_secondary_color"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
						android:id="@+id/thisNetCallsLabel_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="This net"
                        android:textColor="@color/app_text_secondary_color"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/thisNetCallsCount_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="100Mins"
                        android:textColor="@color/app_text_secondary_color"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <View
				android:id="@+id/CallsSmsDividLine_view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_line_primary_color" />

            <LinearLayout
				android:id="@+id/sms_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/sms"
                    android:text="SMS"
                    android:textColor="@color/app_text_tertiary_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
						android:id="@+id/anyNetSmsLabel_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="Any net"
                        android:textColor="@color/app_text_secondary_color"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/anyNetSmsCount_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="100"
                        android:textColor="@color/app_text_secondary_color"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
						android:id="@+id/thisNetSmsLabel_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="This net"
                        android:textColor="@color/app_text_secondary_color"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/thisNetSmsCount_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="100"
                        android:textColor="@color/app_text_secondary_color"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:paddingBottom="6dp"
            android:paddingEnd="8dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs,"
                android:textColor="@color/app_text_primary_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceCount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="798"
                android:textColor="@color/app_text_primary_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>